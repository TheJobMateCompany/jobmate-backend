# ──────────────────────────────────────────────────────────────
# PostgreSQL
# ──────────────────────────────────────────────────────────────
POSTGRES_DB=jobmate
POSTGRES_USER=jobmate
POSTGRES_PASSWORD=changeme_in_production
DATABASE_URL=postgresql://jobmate:changeme_in_production@postgres:5432/jobmate

# ──────────────────────────────────────────────────────────────
# Redis
# ──────────────────────────────────────────────────────────────
REDIS_URL=redis://redis:6379

# ──────────────────────────────────────────────────────────────
# API Gateway
# ──────────────────────────────────────────────────────────────
NODE_ENV=development
PORT=4000
JWT_SECRET=changeme_super_secret_jwt_key
JWT_EXPIRES_IN=7d

# Internal service URLs (Docker Compose network names)
USER_SERVICE_URL=http://user-service:4001

# ──────────────────────────────────────────────────────────────
# AI Coach — LLM Provider
# ──────────────────────────────────────────────────────────────
OPENAI_API_KEY=sk-my-openai-key
# ANTHROPIC_API_KEY=sk-ant-...  # Alternative provider

# ──────────────────────────────────────────────────────────────
# Traefik / SSL — Production only
# ──────────────────────────────────────────────────────────────
ACME_EMAIL=your@email.com
DOMAIN_NAME=api.yourdomain.com

# ──────────────────────────────────────────────────────────────
# GHCR — Used in docker-compose.prod.yml
# Set to your GitHub organization or username (lowercase)
# ──────────────────────────────────────────────────────────────
GHCR_ORG=thejobmatecompany
IMAGE_TAG=latest
