# ──────────────────────────────────────────────────────────────
# PostgreSQL
# ──────────────────────────────────────────────────────────────
POSTGRES_DB=jobmate
POSTGRES_USER=jobmate
POSTGRES_PASSWORD=changeme_in_production
DATABASE_URL=postgresql://jobmate:changeme_in_production@postgres:5432/jobmate

# ──────────────────────────────────────────────────────────────
# Redis
# ──────────────────────────────────────────────────────────────
REDIS_URL=redis://redis:6379

# ──────────────────────────────────────────────────────────────
# API Gateway
# ──────────────────────────────────────────────────────────────
NODE_ENV=development
PORT=4000
JWT_SECRET=changeme_super_secret_jwt_key
JWT_EXPIRES_IN=7d

# Internal service URLs (Docker Compose network names)
USER_SERVICE_URL=http://user-service:4001
TRACKER_SERVICE_URL=http://tracker-service:8082

# ──────────────────────────────────────────────────────────────
# AI Coach — LLM Provider (OpenRouter)
# Get your key at https://openrouter.ai/keys
# ──────────────────────────────────────────────────────────────
OPENROUTER_API_KEY=sk-or-your-key-here
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
OPENROUTER_MODEL=meta-llama/llama-3.3-70b-instruct

# ──────────────────────────────────────────────────────────────
# Discovery Service (job scraping)
# Register at https://developer.adzuna.com to get free API credentials
# ──────────────────────────────────────────────────────────────
ADZUNA_APP_ID=your_adzuna_app_id
ADZUNA_APP_KEY=your_adzuna_app_key
ADZUNA_COUNTRY=fr
DISCOVERY_PORT=8081
SCRAPE_INTERVAL_HOURS=6

# ──────────────────────────────────────────────────────────────
# Traefik / SSL — Production only
# ──────────────────────────────────────────────────────────────
ACME_EMAIL=your@email.com
DOMAIN_NAME=api.yourdomain.com

# ──────────────────────────────────────────────────────────────
# GHCR — Used in docker-compose.prod.yml
# Set to your GitHub organization or username (lowercase)
# ──────────────────────────────────────────────────────────────
GHCR_ORG=thejobmatecompany
IMAGE_TAG=latest
